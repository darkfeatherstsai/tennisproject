<h1> 首頁 </h1>
<p id="notice"><%= notice %></p>

<h1>商品列表</h1>

<table>
  <thead>
    <tr>
      <th>名子</th>
      <th>廠牌</th>
      <th>重量</th>
      <th>價格</th>
      <th>規格</th>
      <th>使用概況</th>
      <th>地點</th>
      <th>連結</th>
    </tr>
  </thead>

  <tbody>
    <% @rackets.each do |racket| %>
      <tr>
        <td><%= racket.name %></td>
        <td><%= racket.label %></td>
        <td><%= racket.weight %></td>
        <td><%= racket.price %></td>
        <td><%= racket.spec %></td>
        <td><%= racket.profile %></td>
        <td><%= racket.location %></td>
        <td><%= racket.fb_url %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
